<Window x:Class="MCParodyLauncherUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCParodyLauncherUpdater"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        ContentRendered="Window_ContentRendered"
        Title="Updater" Height="100" Width="450">
    <Grid>
        <ProgressBar Name="DLProgress" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" Width="400" Height="30"/>
        <TextBlock Name="UpdaterStatusText" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 5, 0" Visibility="Hidden"/>
    </Grid>
</Window>
